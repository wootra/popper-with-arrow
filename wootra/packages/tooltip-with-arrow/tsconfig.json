{
  "compilerOptions": {
    "types": ["vitest/importMeta", "node"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "target": "ESNext",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "sourceRoot": "src",
    "baseUrl": "."
  },
  "buildOptions": {
    "build": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "*.config.js"]
}
